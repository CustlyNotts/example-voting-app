pipeline {
    
    agent any

    tools {
	nodejs 'node 19.0.0'
	}
    
    stages {
        stage('build') {
		when {
			changeset "**/result/**"
}
            steps {
                echo 'Compiling result app'
                dir('result') {
		sh 'npm install'
		}
            }
        }
        
        stage('test') {
		when {
			changeset "**/result/**"
}
            steps {
                echo 'Running Unit tests on result app'
                dir('result') {
		sh 'npm install'
		sh 'npm test'
            }
            
        }
}
            

}
    
    post {
        always {
            echo 'Pipeline for result app is completed...'
        }
    }
}

